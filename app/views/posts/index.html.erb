 <h1>Books</h1>
 
    <table>
    	<thead>
    		<tr>
    			<th>Title</th>
    			<th>Body</th>
    			<th colspan="3"></th>
    		</tr>
    	</thead>
		
		<% @posts.each do |post| %>
    	<tbody>
    		<tr>
    			<td><%= post.title %></td>
    			<td><%= post.body %></td>
    			<td><%= link_to "Show", post_path(post.id),class:"show_#{post.id}" %></td>
    			<td><%= link_to "Edit", edit_post_path(post.id), class:"edit_#{post.id}" %></td>
    			<td><%= link_to "Destroy", destroy_post_path(post.id), class:"destroy_#{post.id}", method: :delete, "data-confirm" =>"delete?" %></td>
    		</tr>
 		<% end %>
 		</tbody>
 	</table>


<!-- 新規投稿の部分 -->


<h1>New Book</h1>
<!-- form_for部分 -->
<%= form_for(@post) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title, class:"book_title" %>
 
    <h4>Body</h4>
    <%= f.text_area :body, class:"book_body" %>
 
    <%= f.submit 'create book' %>
 
<% end %>